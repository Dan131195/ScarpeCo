@model Prodotto
@{
    ViewData["Title"] = "Aggiungi Prodotto";
}
<h2 class="text-center">Aggiungi Nuovo Prodotto</h2>
<form asp-action="Aggiungi" method="post" class="container p-4 border rounded bg-light">
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Prezzo</label>
        <input asp-for="Prezzo" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Descrizione</label>
        <textarea asp-for="Descrizione" class="form-control" required></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Immagine Copertina</label>
        <input asp-for="ImmagineCopertina" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Immagine Aggiuntiva 1</label>
        <input asp-for="ImmagineAggiuntiva1" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Immagine Aggiuntiva 2</label>
        <input asp-for="ImmagineAggiuntiva2" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Aggiungi</button>
</form>
