@model Prodotto
@{
    ViewData["Title"] = "Dettagli Prodotto";
}
<div class="container text-center">
    <h1>@Model.Nome</h1>
    <h4 class="text-primary">Prezzo: @Model.Prezzo €</h4>
    
    
    <div class="row mt-4">
        <div class="col-md-4">
            <img src="@Model.ImmagineCopertina" class="img-thumbnail" alt="@Model.Nome">
        </div>
        <div class="col-md-4">
            <img src="@Model.ImmagineAggiuntiva1" class="img-thumbnail" alt="@Model.Nome">
        </div>
        <div class="col-md-4">
            <img src="@Model.ImmagineAggiuntiva2" class="img-thumbnail" alt="@Model.Nome">
        </div>
    </div>
    <p class="lead bg-white rounded-1 p-2 mt-3">@Model.Descrizione</p>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3 border border-1 border-white">Torna alla vetrina</a>
    <a href="@Url.Action("Modifica", new { id = Model.Id })" class="btn btn-warning mt-3 border border-1 border-white">Modifica</a>
</div>
